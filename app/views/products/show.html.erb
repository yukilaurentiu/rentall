<div class="container">
  <div class="d-flex">
    <div>
      <img class="img-fluid" src="<%= image_path("test_img.jpg")%>" width="300px" height="200px" alt=" <%= @product.title %>">
    </div>
    <div>
      <p style="color: green"><%= notice %></p>
      <h1> Product: <%= @product.title %> </h1>
      <h1> Description: <%= @product.description %> </h1>
      <h1> Category: <%= @product.category %> </h1>
      <h3> <%= @product.price %> <i class="fa-solid fa-euro-sign"></i> </h1>
      <h3> <%= @product.address %> <i class="fa-solid fa-location-dot"></i></h1>
    </div>
  </div>

  <%= cl_image_tag @product.photo.key, height: 300, width: 400, crop: :fill %>

  <%= link_to "Update product", edit_product_path(@product) %>
  <%= link_to "Delete this product",product_path(@product), data: { turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
  <%= link_to "Create Product", new_product_path %>
  <%= link_to "Back to Products", products_path %>
</div>



<div class="container">
  <div class="row justify-content-center" >
  <h1>Request to book for <%= @product.title %></h1>
    <%= simple_form_for [@product, @booking] do |f| %>
      <%= f.input :comment, label: "Comment: " %>
      <%= f.input :start_date, as: :date %>
      <%= f.input :end_date, as: :date %>
      <%= f.submit "Set booking!", class: "btn btn-orange" %>
    <% end %>

    <%= link_to "Back", products_path %>
  </div>
</div>
