<div class="container">
  <p style="color: green"><%= notice %></p>
</div>
<div class="container"  >
  <div class="d-flex">
    <div>
      <img class="card-img-top" src="https://loremflickr.com/320/240/<%=@product.category%>" alt="Card image cap">
    </div>
    <div  >
      <h3 class="spacing"> <%= @product.title %> </h3>
      <p id="cat-border"><%= @product.category %> </p>
      <h4 class="spacing"> <%= @product.description %> </h4>
      <h3 class="spacing"> <%= @product.price %> â‚¬ </h3>
      <h4 class="spacing"> <i class="fa-solid fa-house"></i> <%= @product.address %> </h4>
      <div class="booking-btn" class="product-text">
        <%= link_to "Book now!", new_product_booking_path(@product.id), class: "btn-orange" %>
      </div>
    </div>
  </div>
  <div class="button-container">
    <%= link_to "Update product", edit_product_path(@product), :class => "btn-orange" %>
    <%= link_to "Delete", product_path(@product), data: { turbo_method: :delete, turbo_confirm: "Are you sure?"}, :class => "btn-orange-outline" %>
    <%= link_to "Back to Products", products_path, :class => "btn-orange" %>
  </div>
</div>
