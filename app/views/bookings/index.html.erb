<div class="container booking-wrapper">
  <h1>MY BOOKINGS</h1>
  <div class="container mx-auto">
    <% current_user.bookings.each do |booking| %>
      <div class="card-booking">
        <div class="card-booking-infos">
          <h2 class="mt-4"><%= booking.product.title%></h2>
          <% days = booking.end_date - booking.start_date %>
          <p>from: <%= booking.start_date %> to: <%= booking.end_date %></p>
          <p> Total: <%= days.to_i * booking.product.price %> â‚¬</p>
          <p class="mb-4 comment-text"><%= booking.comment %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>
