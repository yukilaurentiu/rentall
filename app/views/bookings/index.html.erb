<h1>My bookings</h1>
<div class="container mx-auto">
  <% current_user.bookings.each do |booking| %>
    <div class="card-product">
      <div class="card-product-infos">
        <h2><%= booking.product.title%></h2>
        <% days = booking.end_date - booking.start_date %>
        <p> Days: <%= days.to_i %> </p>
        <p> Total: <%= days.to_i * booking.product.price %> â‚¬</p>
        <p><%= booking.comment %></p>
        <p>from: <%= booking.start_date %> to: <%= booking.end_date %></p>
      </div>
    </div>
  <% end %>
</div>
